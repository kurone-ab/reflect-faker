{
	"compilerOptions": {
		"isolatedModules": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"strictNullChecks": true,
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"target": "ESNext",
		"outDir": "dist",
		"lib": ["ESNext", "DOM"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"exclude": ["node_modules", "dist", "example.ts"]
}
